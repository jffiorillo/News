<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle">

	<corners
			android:radius="10dp" />

	<gradient
			android:angle="45"
			android:centerX="0.5"
			android:centerY="0.5"
			android:endColor="@color/colorPrimary"
			android:gradientRadius="@integer/image_item_radius"
			android:startColor="#F0FFF0"
			android:type="linear" />

	<size
			android:width="@dimen/item_image_size"
			android:height="@dimen/item_image_size" />
</shape>